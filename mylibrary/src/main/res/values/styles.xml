    <style name="TextStyle">
        <!-- Example style properties for TextStyle -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.H1">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">1.6sp</item>
        <!--        to calculate linespacingextra is lineHeight - (textSize * 1.2 )-->
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="TextStyle.Body1">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4.8sp</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CustomButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>
