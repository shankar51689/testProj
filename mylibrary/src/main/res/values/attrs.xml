<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AppTheme">
        <attr name="colorSecondary" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="customText" format="string"/>
        <attr name="customBackground" format="reference"/>
        <attr name="customPadding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ButtonView">
        <attr name="text" format="string"/>
        <attr name="buttonTextSize" format="dimension"/>
        <attr name="textColor" format="reference"/>
        <attr name="buttonTextColor" format="color"/>
        <attr name="buttonBackgroundColor" format="color"/>
        <attr name="isRoundCorners" format="boolean"/>
    </declare-styleable>
</resources>